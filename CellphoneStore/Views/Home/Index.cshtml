@{
    ViewData["Title"] = "Home Page";
}
@section Styles{ 
    <link href="~/lib/slick/slick.css" rel="stylesheet" asp-file-version="true" />
    <link rel="stylesheet" type="text/css" href="~/lib/slick/slick-theme.css">
}

<div class="jumbotron">
    <h1>Welcome to Cell phone Store</h1>
    <p>...</p>
    <p><a class="btn btn-primary btn-lg" href="/items" role="button">Explore the store</a></p>
</div>

<section class="variable slider ">
    
</section>






@section Scripts{ 
<script src="~/lib/slick/slick.min.js" type="text/javascript" charset="utf-8"></script>
<script src="~/js/ShoppingCart.js" type="text/javascript" charset="utf-8"></script>
<script>
    cart.loadFromLocalStorage();
    cart.updateBadge();
    $(document).on('ready', function () {
        var options = {};
        options.url = "http://localhost:49403/api/Items";
        options.type = "GET";
        options.dataType = "json";
        options.success = function (data) {
            data.forEach(function (element) {
                $(".variable").append('<div class="thumbnail thumbnail-modified"><a href="/items/details/' + element.itemID + '"><img class="img-responsive"src="' + element.image + '" alt="No Image"> <div class="caption text-center"> ' + element.name + '<p>' + element.price + '</p></a> <p><a href="/items/details/' + element.itemID + '" class="btn btn-primary" role="button">Details</a> <button class="btn btn-default" onclick="cart.increaseItemByQuantity(' + element.itemID + ',\'' + element.name + '\',' + element.price + ',1)" >Add to Cart</button></p></div></div>');
            });
        };
        options.error = function () {
            $("#msg").html("Error while calling the Web API!");
        };
        $.ajax(options).done(function () {
            $(".variable").slick({
                slidesToShow: 5,
                infinite: true,
                variableWidth: true,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 2000,
                pauseOnHover: true,
                slidesPerRow: 5,
            });
        });
    });
</script>

}
    





   
